<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/select_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="새 코드 만들기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="녹음이나 Youtube Url 업로드로 코드를 받아보세요.\n한 번에 최데 5분까지 가능해요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_title_tv" />

    <ImageView
        android:id="@+id/select_record_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/select_url_upload_ib"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_description_tv"
        app:srcCompat="@drawable/ic_radio_checked" />

    <ImageView
        android:id="@+id/select_url_upload_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/select_record_ib"
        app:layout_constraintTop_toTopOf="@+id/select_record_ib"
        app:srcCompat="@drawable/ic_file_upload" />

    <TextView
        android:id="@+id/select_record_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/select_record_ib"
        app:layout_constraintStart_toStartOf="@+id/select_record_ib"
        app:layout_constraintTop_toBottomOf="@+id/select_record_ib" />

    <TextView
        android:id="@+id/select_url_upload_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Upload Youtube URL"
        app:layout_constraintEnd_toEndOf="@+id/select_url_upload_ib"
        app:layout_constraintStart_toStartOf="@+id/select_url_upload_ib"
        app:layout_constraintTop_toBottomOf="@+id/select_url_upload_ib" />

</androidx.constraintlayout.widget.ConstraintLayout>