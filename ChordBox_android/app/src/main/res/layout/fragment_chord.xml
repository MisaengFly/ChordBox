<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.misaengfly.chordbox.visualizer.PlayerVisualizer
        android:id="@+id/playerVisualizer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        app:approximateBarDuration="75"
        app:barWidth="2dp"
        app:layout_constraintBottom_toTopOf="@+id/music_play_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_date_tv"
        app:maxAmp="150"
        app:spaceBetweenBar="2dp" />

    <ImageButton
        android:id="@+id/music_play_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/music_forward_btn"
        app:layout_constraintStart_toEndOf="@+id/music_backward_btn" />

    <ImageButton
        android:id="@+id/music_backward_btn"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/music_play_btn"
        app:layout_constraintEnd_toStartOf="@+id/music_play_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/music_play_btn"
        app:srcCompat="@drawable/ic_rewind" />

    <ImageButton
        android:id="@+id/music_forward_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/music_play_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/music_play_btn"
        app:layout_constraintTop_toTopOf="@+id/music_play_btn"
        app:srcCompat="@drawable/ic_fast_forward" />

    <TextView
        android:id="@+id/music_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Music Name"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/music_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Music Created Date"
        app:layout_constraintStart_toStartOf="@+id/music_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/music_name_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>